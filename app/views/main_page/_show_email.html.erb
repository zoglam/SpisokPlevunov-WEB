<div class="show_email">
  <% @emails.each do |email| %>
  <table>
    <td> 
      <%= email.name %>
      <%= email.secondName %>
      <%= email.email %>
    </td>

    <td>
      <details>
       <summary class="btn btn-outline-danger boxed-action" role="botton">Удалить</summary>
        <details-dialog>
          <%= form_for :deleteEmail, id:'form_delete_email', :url => {:action => "deleteEmail"} do |deleteEmail| %>
            <%= deleteEmail.hidden_field :id, :value => email.id %>
            <%= deleteEmail.submit "Удалить", class: "submit_delete_email"%>
          <%end%>
        </details-dialog>
      </details>
    </td>
  </table>
  <% end %>
</div>